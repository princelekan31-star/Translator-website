      moves = 0; updateMoves();
    }

    function render() {
      boardEl.style.gridTemplateColumns = `repeat(${GRID_SIZE}, 1fr)`;
      boardEl.style.gridTemplateRows = `repeat(${GRID_SIZE}, 1fr)`;
      boardEl.innerHTML = '';
      tiles.forEach((val, idx) => {
        const tile = document.createElement('div');
        tile.className = 'tile' + (val === 0 ? ' empty' : '');
