      moves = 0; updateMoves();
      render();
      setStatus('Shuffled. Go!');
    }

    function isSolved() {
      for (let i = 0; i < tiles.length - 1; i++) if (tiles[i] !== i + 1) return false;
      return tiles[tiles.length - 1] === 0;
    }

    function updateMoves() { movesEl.textContent = `Moves: ${moves}`; }
    function setStatus(text) { statusEl.textContent = `Status: ${text}`; }

    shuffleBtn.addEventListener('click', () => shuffle(300));

    init();
  </script>
