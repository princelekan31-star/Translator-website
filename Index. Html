        if (val !== 0) tile.addEventListener('click', () => tryMove(idx));
        boardEl.appendChild(tile);
      });
    }

    function coords(index) {
      return {r: Math.floor(index / GRID_SIZE), c: index % GRID_SIZE};
    }

    function isAdjacent(i1, i2) {
      const a = coords(i1), b = coords(i2);
      return Math.abs(a.r - b.r) + Math.abs(a.c - b.c) === 1;
    }

    function tryMove(index) {
      const emptyIndex = tiles.indexOf(0);
      if (isAdjacent(index, emptyIndex)) {
        swap(index, emptyIndex);
        moves++; updateMoves();
        render();
        if (isSolved()) setStatus(`You solved it in ${moves} moves.`);
      } else {
        setStatus('That tile is not next to the empty space.');
      }
    }

    function swap(i, j) {
      [tiles[i], tiles[j]] = [tiles[j], tiles[i]];
    }

    function shuffle(times = 200) {
      tiles = [];
      for (let i = 1; i <= GRID_SIZE * GRID_SIZE - 1; i++) tiles.push(i);
      tiles.push(0);

      let emptyIndex = tiles.indexOf(0);
      for (let t = 0; t < times; t++) {
        const neighbors = [];
        for (let i = 0; i < tiles.length; i++) if (isAdjacent(i, emptyIndex)) neighbors.push(i);
        const pick = neighbors[Math.floor(Math.random() * neighbors.length)];
        swap(pick, emptyIndex);
        emptyIndex = pick;
