<script>
const dictionary = {
    "hello": "bawo",
    "hi": "pele",
    "how": "bawo",
    "are": "ni",
    "you": "wọ",
    "i": "emi",
    "am": "ni",
    "fine": "dara",
    "good": "dara",
    "morning": "aarọ",
    "afternoon": "ọsan",
    "evening": "alẹ",
    "night": "oru",
    "food": "ounjẹ",
    "water": "omi",
    "come": "bọ",
    "go": "lọ",
    "house": "ilé",
    "home": "ilé",
    "school": "ile-iwe",
    "book": "iwe",
    "name": "orukọ",
    "my": "mi",
    "your": "rẹ",
    "friend": "ọrẹ",
    "boy": "ọmọkunrin",
    "girl": "ọmọbìnrin",
    "man": "ọkunrin",
    "woman": "obinrin",
    "love": "fẹ",
    "see": "ri",
    "walk": "rin",
    "run": "sare",
    "talk": "sọ",
    "listen": "gbọ",
    "wait": "duro"
};

function translateWord(word) {
    let clean = word.toLowerCase().replace(/[.,!?]/g, "");
    return dictionary[clean] ? dictionary[clean] : word;
}

function translateText() {
    let text = document.getElementById("englishInput").value.trim();
    let words = text.split(/\s+/);
    let translated = words.map(w => translateWord(w));
    document.getElementById("yorubaOutput").value = translated.join(" ");
}
</script>

